@model IEnumerable<TenAugust.Models.ProductCategory>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-left:20px">Index</h1>

<p style="padding-left:20px">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table" style="margin-left:20px">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a class="btn btn-primary" asp-area="Admin" asp-controller="ProductCategories" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a> |
                <a class="btn btn-dark" asp-area="Admin" asp-controller="ProductCategories" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-book"></i></a> |
                <a class="btn btn-danger" asp-area="Admin" asp-controller="ProductCategories" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
