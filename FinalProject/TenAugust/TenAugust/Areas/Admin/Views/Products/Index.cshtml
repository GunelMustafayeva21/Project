@model IEnumerable<TenAugust.Models.Product>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-left:20px">Index</h1>

<p style="margin-left:20px">
    <a class="btn btn-primary" asp-action="Create"><i class="bi bi-pencil-square"></i></a>
</p>

<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size4)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size5)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size6)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductCategory)
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <img src="~/images/@item.Image" style="width:70px; aspect-ratio:1/1; object-fit:cover" />
                    @*@Html.DisplayFor(modelItem => item.Image)*@
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size2)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size3)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size4)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size5)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size6)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProductCategory.Name)
                </td>
                <td>
                    <a style="display:block; margin-bottom:5px" class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-fill"></i></a>
                    <a style="display: block; margin-bottom: 5px" class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-book"></i></a>
                    <a style="display: block; margin-bottom: 5px" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div style="padding-left:20px;">
    @for (int i = 1; i <= ViewBag.PageCount; i++)
    {
        if (i == ViewBag.CurrentPage)
        {
            <a href="/admin/products/index?page=@i" class="btn btn-secondary disabled">@i</a>
        }
        else
        {
            <a href="/admin/products/index?page=@i" class="btn btn-primary">@i</a>
        }
    }
</div>