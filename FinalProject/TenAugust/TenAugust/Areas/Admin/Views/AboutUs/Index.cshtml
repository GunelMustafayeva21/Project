@model IEnumerable<TenAugust.Models.AboutUs>

@{
    ViewData["Title"] = "Index";
}

<h1 style="padding-left:20px">Index</h1>

<p style="padding-left:20px">
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table" >
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="~/images/@item.Image" style="width:70px; aspect-ratio:1/1; object-fit:cover" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                <a style="display:block;  margin-bottom: 5px;" class="btn btn-success" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i></a> 
                <a style="display: block; margin-bottom: 5px;" class="btn btn-dark" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-book"></i></a> 
                <a style="display: block; margin-bottom: 5px;" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash3-fill"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
