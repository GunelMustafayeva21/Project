@model List<AppUser>
<div class="d-flex justify-content-between align-items-center">
    <h1 class="mb-4" style="padding-left:20px;">Users</h1>
</div>
<table class="table table-hover" style="margin-left:20px;">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Username</th>
            <th>Age</th>
            <th>Status</th>
            <th>Settings</th>
        </tr>
    </thead>
    <tbody>
        @foreach (AppUser item in Model)
        {
            <tr>
                <td>@item.Name @item.Surame </td>
                <td>@item.Email</td>
                <td>@item.UserName</td>
                <td>@item.Age</td>
                <td>@(item.Status?"Active":"Blocked")</td>
                <td>
                    @if (item.Status)
                    {
                        <a href="/admin/users/block/@item.Id" class="btn btn-danger">
                            <i class="fa fa-lock"></i>
                        </a>
                    }
                    else
                    {
                        <a href="/admin/users/unblock/@item.Id" class="btn btn-success">
                            <i class="fa fa-unlock"></i>

                        </a>
                    }

                    <a href="/admin/users/manageRoles/@item.Id" class="btn btn-primary">
                        <i class="fa fa-crown"></i>
                    </a>

                    <a href="/admin/users/ResetPassword/@item.Id" class="btn btn-warning">
                        <i class="fa fa-hammer"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>